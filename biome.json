{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "extends": [],
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      ".next",
      "**/.next/**/*",
      "node_modules",
      "**/node_modules/**/*",
      "./*.json",
      "dist",
      ".env",
      ".log",
      ".cache",
      "**/coverage/**/*",
      "**/out/**/*",
      "**/storybook-static/**/*",
      "**/test-results/**/*"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noForEach": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "useImportType": "off",
        "noUselessElse": "warn",
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "useSelfClosingElements": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    }
  }
}
